<div id="page_wrapper">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, placeholder: 'First Name', autofocus: true, label: false, required: true %>

      <%= f.input :last_name, placeholder: 'Last Name', label: false, required: true %>

      <%= f.input :email, placeholder: 'Email', required: true, label: false  %>

      <%= f.input :password, placeholder: 'Password, must be at least 8 characters', required: true, label: false %>
      <!--  hint: ("#{@minimum_password_length} characters minimum" if @validatable) -->
      <%= f.input :password_confirmation, placeholder: 'Confirm Password', required: true, label: false %>
    </div>
    <br />
    <div class="form-actions">
      <p> By creating an account, I accept <%= link_to "Sonderfly's Terms of Service.", '#' %></p>
      <br /><br />
      <%= f.button :submit, "Create Account", :class => 'button' %>
      <%= link_to 'Log in', new_user_session_path, :class => 'button' %>
  <% end %>

 <!-- <%= render "devise/shared/links" %> -->
</div>