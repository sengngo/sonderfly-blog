<div class="col-xs-10 col-xs-offset-1">
  <h1><%= @post.title %></h1>
  <i><%= @post.intro %></i>
  <br/><br/>
  <p><%= @post.body %></p>

   <div class="pull-right">
   <% if current_user && current_user == @post.user %>
    <%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Destroy', post_path(@post), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'},:class => 'btn btn-danger' %>
  </div>
</div>

<div class="clear"></div>
<%= simple_form_for @comment, :url => post_comments_path(@post) do |f| %>
  <%= f.input :message %>
  <%= f.submit "Publish", :class => 'btn btn-primary' %>
<% end %>

<h1>Comments</h1>

<% @post.comments.each do |comment| %>
  <div>
    <blockquote>
        <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>